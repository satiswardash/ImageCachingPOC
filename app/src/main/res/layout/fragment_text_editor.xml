<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundSecondary"
    tools:context="com.incture.mobility.imagecachingpoc.fragments.TextEditorFragment">

    <ImageView
        android:id="@+id/description_edit_text_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/colorPrimary" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/description_edit_text_close"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@color/colorPrimary" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/description_save_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:tint="@color/colorWhite"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_save_black" />

    <EditText
        android:id="@+id/description_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/circleImageView"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/circleImageView"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Type your text here..."
        android:inputType="textMultiLine"
        android:overScrollMode="ifContentScrolls"
        android:paddingBottom="32dp"
        android:textSize="14sp"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/colorBlack"
        app:layout_constraintEnd_toEndOf="parent"
        android:focusedByDefault="true"/>

</RelativeLayout>
